<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="styles.css" />
    <style>
      .formContainer {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
        box-sizing: border-box;
        background: linear-gradient(135deg, #f3f4f6, #ffffff);
      }

      .resetBox {
        width: 100%;
        max-width: 400px;
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      .resetTitle {
        margin-bottom: 25px;
        font-size: 24px;
        font-weight: bold;
        color: #333;
      }

      .form {
        display: flex;
        flex-direction: column;
      }

      .textFieldContainer {
        margin-bottom: 15px;
      }

      .textField {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      .error {
        color: red;
        font-size: 12px;
      }

      .submitButton {
        margin-top: 15px;
        padding: 10px 20px;
        border-radius: 8px;
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .submitButton:disabled {
        background-color: #cccccc;
        cursor: not-allowed;
      }

      .submitButton:hover:not(:disabled) {
        background-color: #005bb5;
      }

      @media (max-width: 768px) {
        .formContainer {
          padding: 15px;
        }

        .resetBox {
          padding: 20px;
        }

        .textFieldContainer {
          margin-bottom: 10px;
        }

        .submitButton {
          margin-top: 10px;
        }
      }

      @media (max-width: 480px) {
        .resetBox {
          padding: 15px;
        }

        .textFieldContainer {
          margin-bottom: 8px;
        }

        .submitButton {
          margin-top: 8px;
        }
      }
    </style>
  </head>
  <body>
    <div class="formContainer">
      <div class="resetBox">
        <h4 class="resetTitle">Reset Password</h4>
        <form class="form" action="/auth/reset-password" method="POST">
          <div class="textFieldContainer">
            <input
              id="id"
              name="id"
              type="id"
              class="textField"
              value=""
              style="display: none;"
              oninput="validateForm()"
            />
            <span class="error" id="confirmPasswordError"></span>
          </div>
          <div class="textFieldContainer">
            <label for="newPassword">New Password</label>
            <input
              id="newPassword"
              name="newPassword"
              type="password"
              class="textField"
              required
              minlength="8"
              oninput="validateForm()"
            />
            <span class="error" id="newPasswordError"></span>
          </div>
          <div class="textFieldContainer">
            <label for="confirmPassword">Confirm Password</label>
            <input
              id="confirmPassword"
              name="confirmPassword"
              type="password"
              class="textField"
              required
              oninput="validateForm()"
            />
            <span class="error" id="confirmPasswordError"></span>
          </div>
          <button type="submit" class="submitButton" id="submitButton" disabled>
            Submit
          </button>
        </form>
      </div>
    </div>

    <script>
      const url = window.location.href;

      const urlObj = new URL(url);
      const id = urlObj.pathname.split("/")[3];
    
      const formData = {
        newPassword: "",
        confirmPassword: "",
        id,
      };

      const errors = {
        newPassword: "",
        confirmPassword: "",
      };

      function validateForm() {
        const newPassword = document.getElementById("newPassword").value;
        const confirmPassword =
          document.getElementById("confirmPassword").value;

        if (newPassword.length < 8) {
          errors.newPassword = "Password must be at least 8 characters";
        } else {
          errors.newPassword = "";
        }

        if (newPassword !== confirmPassword) {
          errors.confirmPassword = "Passwords do not match";
        } else {
          errors.confirmPassword = "";
        }

        document.getElementById("newPasswordError").innerText =
          errors.newPassword;
        document.getElementById("confirmPasswordError").innerText =
          errors.confirmPassword;
        document.getElementById("id").value = id;
        const formValid = !errors.newPassword && !errors.confirmPassword;
        document.getElementById("submitButton").disabled = !formValid;
      }

      function handleSubmit(event) {
        event.preventDefault();
        // Assume password reset is successful for demonstration
        alert("Password reset successful!");
      }
    </script>
  </body>
</html>
